---
import { type CollectionEntry } from "astro:content";
type Props = CollectionEntry<"houses">["data"] & { slug: string };
import { Image } from "astro:assets";
const { image, title, location, ambientes, slug } = Astro.props;
---

<a
    class="max-h-[300px] md:max-h-[450px] bg-white w-[85%] md:text-lg text-black hover:text-white rounded-lg border-2 border-pink-500 flex flex-col justify-center items-center my-3.5 hover:bg-pink-500 duration-200 cursor-pointer "
    href={`/houses/${slug}`}
>
    <div class=" flex items-center">
        <Image
            src={image}
            width="500"
            height="100"
            class="rounded-t-md max-h-[160px] md:max-h-[260px]"
            alt=""
        />
    </div>
    <div
        class="w-[100%] h-[40%] flex flex-col justify-around items-center border-t-2 p-2.5 md:p-6 "
    >
        <h3 class="text-xs md:text-lg text-center"><b>{title}</b></h3>
        <p
            class="text-xs md:text-md text-center text-pink-500"
        >
            <b>{location}</b>
        </p>
        <div class="flex items-center">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-home-cog"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                    d="M9 21v-6a2 2 0 0 1 2 -2h1.6"></path><path
                    d="M20 11l-8 -8l-9 9h2v7a2 2 0 0 0 2 2h4.159"></path><path
                    d="M18 18m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
                    d="M18 14.5v1.5"></path><path d="M18 20v1.5"></path><path
                    d="M21.032 16.25l-1.299 .75"></path><path
                    d="M16.27 19l-1.3 .75"></path><path d="M14.97 16.25l1.3 .75"
                ></path><path d="M19.733 19l1.3 .75"></path></svg
            >
            <p class="text-xs md:text-md">
                <b>
                    {ambientes}
                </b>
            </p>
        </div>
    </div>
</a>
