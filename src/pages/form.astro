---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Enviame un Mensaje">
    <div
        class="w-full h-custom--calc md:h-custom-calc flex flex-col justify-center items-center"
    >
        <h2 class="text-2xl my-5"><b>Contactame</b></h2>
        <form
            class="flex flex-col w-[450px] h-fit border p-3 rounded-lg"
            method="
            POST"
            action="https://formsubmit.co/coppolapavese@gmail.com"
        >
            <div class="mx-4 my-2">
                <p class="underline text-pink-700"><b>Su Email</b></p>
                <input
                    class="border p-2 w-full"
                    type="email"
                    placeholder="Introduzca su Email"
                    required
                />
            </div>
            <div class="mx-4 my-2">
                <p class="underline text-pink-700"><b>Informacion</b></p>
                <input
                    class="border p-2 w-full"
                    type="text"
                    placeholder="Descripcion de la Casa"
                    required
                />
            </div>
            <div class="mx-4 my-2">
                <p class="underline text-pink-700"><b>Mensaje</b></p>
                <textarea
                    class="border p-2 w-full"
                    placeholder="Su Consulta..."
                    required
                >
                </textarea>
            </div>

            <input
                class="bg-pink-500 text-white hover:bg-pink-700 flex-row border justify-center cursor-pointer hover:bg-black-600 hover:text-white focus:ring-2 focus:outline-none focus:ring-black-300 font-medium rounded-lg px-2.5 py-1.5 text-center inline-flex items-center dark:focus:ring-black-300 hover:shadow-lg transition-all duration-200 ease-in-out hover:scale-110 scale-90 gap-x-2 opacity-90 hover:opacity-100"
                type="submit"
                class="btnsubmit"
            />

            <input type="hidden" name="_next" value="http://localhost:5173" />
            <input type="hidden" name="_captcha" value="false" />
        </form>
    </div>
</Layout>
